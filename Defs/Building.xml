<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
  <ThingDef>
    <category>Building</category>
    <thingClass>AnimalStation.Building_Shearer</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
    <defName>Shearer</defName>
    <label>shearer</label>
    <graphicData>
      <texPath>Milker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Rare</tickerType>
    <description>A 2x2 feeding box for your farm animals, but underneath the box is a set of robotic arms and shears to shear wool with minimal invasiveness. Drops wool where the animal is standing. Works on any tamed animal.</description>
    <size>(2,2)</size>
    <costStuffCount>50</costStuffCount>
    <CostList>
      <Steel>50</Steel>
      <Hay>50</Hay>
      <Component>10</Component>
    </CostList>
    <stuffCategories>
      <li>Woody</li>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>750</basePowerConsumption>
        <startElectricalFires>false</startElectricalFires>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <rotatable>true</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <designationCategory>Production</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <ignoreNeedsPower>false</ignoreNeedsPower>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Foods</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <thingDefs>
            <li>Hay</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <placeWorkers>
      <li>AnimalStation.PlaceWorker_ShowAdjacent</li>
    </placeWorkers>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <researchPrerequisites>
      <li>Machining</li>
    </researchPrerequisites>
    <surfaceType>Item</surfaceType>
  </ThingDef>
